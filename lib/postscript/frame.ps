%
% define the grid
% to call this function:
% XINI YINI XFIN YFIN XSTEPS YSTEPS LEVELGRAY grid
%
/grid {
   gsave
   7 dict begin
   /graylevel exch def                          %define the arguments
   /ytimes exch def                          
   /xtimes exch def
   /yfing  exch def
   /xfing  exch def
   /yinig  exch def
   /xinig  exch def
   /xsteps xfing xinig sub xtimes div  def    %define the number of grid boxes
   /ysteps yfing yinig sub ytimes div  def
   yinig ysteps yfing {                      %loop for horizontal lines
      /yini exch def
      newpath
      xinig yini moveto
      xfing yini lineto
      closepath
      graylevel setgray stroke
   } for
   xinig xsteps xfing {                   %loop for vertical lines
      /xini exch def
      newpath
      xini yinig moveto
      xini yfing lineto
      closepath
      graylevel setgray stroke
   } for
   grestore
   end
} def
