cc = f2py
LIB = -lport

LIBPATH = -L$(libport)

FILES = localSearch.f
F2PY_FLAGS = -c -m

default:  localSearch

localSearch : 
	$(cc)  $(F2PY_FLAGS) $@  $(FILES) $(LIBPATH) $(LIB)